/*地址*/

.location {
    height: 44px;
    line-height: 44px;
    padding: 0 30rpx;
    font-size: 30rpx;
    margin-bottom: 4px;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.location view {
    display: flex;
    align-items: center;
    justify-content: center;
}

.location image {
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
    margin-top: -4rpx;
    margin-right: 10rpx;
}

.btn_header {
    margin: 0 12rpx;
}

.location text {
    display: block;
    width: 40rpx;
}

.btn {
    color: #fff;
    font-size: 24rpx;
    line-height: 48rpx;
    height: 48rpx;
    padding: 0 20rpx;
    background: linear-gradient(315deg, rgba(27, 136, 249, 1) 0%, rgba(102, 209, 255, 1) 100%);
    border-radius: 4px;
    margin-right: 12rpx
}
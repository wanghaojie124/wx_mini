/*课表*/

.box {
    position: relative;
}

.box .line1, .box .line2 {
    position: absolute;
    width: 100vw;
    border-bottom: 1px solid #1989fa;
    left: 0;
    opacity: 0.4;
}

.box .line1 {
    top: calc(76rpx + 52vw);
}

.box .line2 {
    top: calc(76rpx + 104vw);
}

.curriculum {
    display: flex;
    background-color: #f4f7ff;
    /* padding-bottom: 144rpx; */
}

.vertical {
    width: 13.5vw;
    text-align: center;
}

.vertical.fir {
    width: 5vw;
    line-height: 13vw;
    background-color: #fff;
}

.vertical .line {
    height: 13vw;
    width: 100%;
    overflow: hidden;
}

.vertical .line view {
    height: 100%;
}

.vertical .line view text {
    display: block;
}

.vertical.fir .line:first-child, .vertical .head {
    height: 76rpx;
    line-height: 36rpx;
    font-size: 24rpx;
}

.vertical .head.active text {
    color: #1989fa;
}

.vertical .head text {
    display: block;
}

.vertical:not(.fir) .line {
    font-size: 24rpx;
    padding: 4rpx;
    box-sizing: border-box;
    word-break: break-all;
}

.vertical:not(.fir) .line view {
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
    overflow-y: auto;
}

.vertical:not(.fir) .line view text:last-child {
    font-size: 20rpx;
}

.vertical > view:first-child {
    background-color: #fff;
}

.vertical.fir .line {
    font-size: 24rpx;
}

.vertical.fir .line:first-child {
    font-size: 28rpx;
    background-color: #6591fa;
    color: #fff;
}

